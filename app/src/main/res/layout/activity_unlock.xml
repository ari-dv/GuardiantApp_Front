<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:gravity="center"
    android:background="@android:color/white">

    <!-- TÃ­tulo -->
    <TextView
        android:id="@+id/textViewTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ðŸ”’ Desbloquear Dispositivo"
        android:textSize="28sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="16dp" />

    <!-- DescripciÃ³n -->
    <TextView
        android:id="@+id/textViewDesc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ingresa tu PIN para desbloquear"
        android:textSize="16sp"
        android:gravity="center"
        android:layout_marginBottom="32dp" />

    <!-- Visor de PIN -->
    <TextView
        android:id="@+id/textPinDisplay"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:textSize="32sp"
        android:gravity="center"
        android:background="@drawable/pin_display_background"
        android:layout_marginBottom="32dp"
        android:text="" />

    <!-- Teclado NumÃ©rico -->
    <GridLayout
        android:id="@+id/keypad"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="3"
        android:rowCount="4"
        android:layout_marginBottom="24dp">

        <Button
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_columnWeight="1"
            android:text="1"
            android:tag="1"
            android:textSize="20sp" />

        <Button
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_columnWeight="1"
            android:text="2"
            android:tag="2"
            android:textSize="20sp" />

        <Button
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_columnWeight="1"
            android:text="3"
            android:tag="3"
            android:textSize="20sp" />

        <Button
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_columnWeight="1"
            android:text="4"
            android:tag="4"
            android:textSize="20sp" />

        <Button
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_columnWeight="1"
            android:text="5"
            android:tag="5"
            android:textSize="20sp" />

        <Button
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_columnWeight="1"
            android:text="6"
            android:tag="6"
            android:textSize="20sp" />

        <Button
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_columnWeight="1"
            android:text="7"
            android:tag="7"
            android:textSize="20sp" />

        <Button
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_columnWeight="1"
            android:text="8"
            android:tag="8"
            android:textSize="20sp" />

        <Button
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_columnWeight="1"
            android:text="9"
            android:tag="9"
            android:textSize="20sp" />

        <Button
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_columnWeight="1"
            android:text="0"
            android:tag="0"
            android:textSize="20sp" />

        <Button
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_columnWeight="1"
            android:text="âŒ« DEL"
            android:tag="del"
            android:textSize="16sp"
            android:backgroundTint="@android:color/holo_red_light" />

    </GridLayout>

    <!-- BotÃ³n Desbloquear -->
    <Button
        android:id="@+id/buttonUnlock"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Desbloquear"
        android:textSize="18sp"
        android:backgroundTint="@android:color/holo_green_dark" />

    <!-- Progress Bar (oculto por defecto) -->
    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:visibility="gone" />

</LinearLayout>